---
title: links
---

{% for link in links %}
    <section class="mb-4">
        <p class="text-sm text-gray-400 float-right">{{ link.created | convertTimestamp }}</p>
        <p class="mb-2"><a class="underline text-blue-300 hover:text-blue-500" href="{{ link.url }}">{{ link.title }}</a></p>
        {% for excerpt in link.excerpts %}
            <blockquote class="bg-gray-600 mb-2 p-1">{{ excerpt }}</blockquote>
        {% endfor %}
        <aside class="italic">{{ link.comment }}</aside>
    </section>
{% endfor %}